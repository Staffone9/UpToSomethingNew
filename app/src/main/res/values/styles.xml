<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Shallow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@drawable/sign_in_drawable</item>
    </style>

    <style name="btnColored">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@drawable/btn_colored</item>
    </style>

    <style name="btnWhite">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:background">@drawable/btn_white</item>
    </style>

</resources>
