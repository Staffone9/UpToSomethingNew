<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.staffonechristian.fcm.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/TitleId"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="Title Of Event"
            android:inputType="textPersonName" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLines="10"
        android:layout_below="@+id/TitleId"
        android:layout_alignLeft="@+id/TitleId"
        android:layout_alignStart="@+id/TitleId"
        android:layout_marginTop="25dp"
        android:id="@+id/DetailId"
        android:hint="Detail Of Event"
        android:textSize="18sp"
        android:layout_weight="0.25" />




    <Button
        android:text="Send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SendId"
        android:layout_marginTop="48dp"
        android:onClick="SendNotification"
        android:layout_below="@+id/DetailId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SendId"
        android:layout_marginTop="62dp"
        android:id="@+id/RecyclerId"
        android:onClick="OpenAnnouncement"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logoutButton1"
            android:onClick="LogoutMethod"
            android:text="Log out"
            />
    </LinearLayout>
</RelativeLayout>
